{
  "analysis": {
    "tokenizer": {
      "nori_tokenizer": {
        "type": "nori_tokenizer"
      }
    },
    "filter": {
      "my_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 8
      }
    },
    "analyzer": {
      "custom_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "my_ngram_filter"
        ]
      },
      "english_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase"]
      },
      "custom_search_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase"
        ]
      }
    }
  }
}
